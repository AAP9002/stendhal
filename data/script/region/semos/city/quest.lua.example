local quest = quests.simple:create("wood_for_lua", "Wood for Lua", "Lua")
quest:setDescription("Lua needs help gathering wood.")
quest:setReply(quests.simple.ID_REQUEST, "I need help gathering some wood. Will you help me?")
quest:setReply(quests.simple.ID_ACCEPT, "Great!")
quest:setReply(quests.simple.ID_REJECT, "Fine! I don't need your help anyway.")
quest:setReply(quests.simple.ID_REWARD, "Thanks a bunch!")
quest:setVerboseReward(true) -- the default is "true", just showing here as an example
quest:setItemToCollect("wood", 5)
quest:setRepeatable(10)
quest:setXPReward(50)
quest:setKarmaReward(5.0)
quest:addItemReward("rose", 3)
quest:addItemReward("money", 100)
quest:setRegion(Region.SEMOS_CITY)

quests:register(quest)
