{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "stendhal_client",
  "version": "1.0.0",
  "defaultMode": "chrome",
  "port": 0,
  "documentRoot": "/resources/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "enableExtensions": true,
  "extensions": [
    {
        "id": "neutralinojs_steamworks",
        "commandLinux": "${NL_PATH}/extensions/binary/neutralinojs-steamworks",
        "commandWindows": "${NL_PATH}/extensions/binary/neutralinojs-steamworks.exe"
    }
  ],
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": [
    "app.*",
    "os.*",
    "debug.log",
    "extensions.*"
  ],
  "modes": {
    "window": {
      "title": "Stendhal",
      "width": 930,
      "height": 700,
      "minWidth": 400,
      "minHeight": 200,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/resources/icons/appIcon.png",
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": true
    },
    "chrome": {
      "width": 930,
      "height": 700,
      "minWidth": 400,
      "minHeight": 200,
      "icon": "/resources/icons/appIcon.png",
      "args": "--user-agent=\"Stendhal\"",
      "nativeBlockList": [
        "filesystem.*",
        "os.*"
      ]
    }
  },
  "cli": {
    "binaryName": "stendhal-client",
    "resourcesPath": "/resources/",
    "extensionsPath": "/extensions/",
    "clientLibrary": "/resources/js/neutralino.js",
    "binaryVersion": "4.15.0",
    "clientVersion": "3.13.0"
  }
}
